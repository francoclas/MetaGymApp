@model List<AgendaProfesional>
@using LogicaNegocio.Clases
@using LogicaNegocio.Extra

@{
    ViewData["Title"] = "Gestión de Jornadas";
}

<div class="container">
    <h2 class="mb-4 text-light">Gestión de Jornadas</h2>
    <p class="text-muted">
        En esta sección podés organizar tus días y horarios de trabajo.
        Aquí verás tus jornadas registradas, podrás agregar nuevas y eliminar las que no desees. Estos horarios se muestran en la agenda.
    </p>

    <div class="row">
        <div class="col-md-7">
            @if (Model != null && Model.Any())
            {
                <table class="table table-dark table-bordered">
                    <thead>
                        <tr>
                            <th>Día</th>
                            <th>Hora de inicio</th>
                            <th>Hora de fin</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var agenda in Model)
                        {
                            <tr>
                                <td>@agenda.Dia</td>
                                <td>@agenda.HoraInicio.ToString(@"hh\:mm")</td>
                                <td>@agenda.HoraFin.ToString(@"hh\:mm")</td>
                                <td>
                                    <form asp-action="Eliminar" method="post" onsubmit="return confirm('¿Seguro que querés eliminar esta jornada?');">
                                        <input type="hidden" name="id" value="@agenda.Id" />
                                        <button class="btn btn-danger btn-sm" type="submit">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">Todavía no registraste ninguna jornada de trabajo.</p>
            }
        </div>

        <div class="col-md-5">
            <partial name="_CrearAgendaParcial" model="new AgendaProfesional()" />
        </div>
    </div>
</div>
