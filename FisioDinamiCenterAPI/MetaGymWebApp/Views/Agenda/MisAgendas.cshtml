@model List<AgendaProfesional>
@using LogicaNegocio.Clases
@using LogicaNegocio.Extra

@{
    ViewData["Title"] = "Mis Agendas";
}

<div class="container">
    <h2 class="mb-4 text-light">Mis Agendas</h2>

    <a class="btn btn-primary mb-3" asp-action="Crear">Agregar nueva franja</a>

    @if (Model != null && Model.Any())
    {
        <table class="table table-dark table-bordered">
            <thead>
                <tr>
                    <th>Día</th>
                    <th>Hora de inicio</th>
                    <th>Hora de fin</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var agenda in Model)
                {
                    <tr>
                        <td>@agenda.Dia</td>
                        <td>@agenda.HoraInicio.ToString(@"hh\:mm")</td>
                        <td>@agenda.HoraFin.ToString(@"hh\:mm")</td>
                        <td>
                            <form asp-action="Eliminar" method="post">
                                <input type="hidden" name="id" value="@agenda.Id" />
                                <button class="btn btn-danger btn-sm" type="submit">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No tenés agendas registradas todavía.</p>
    }
</div>
