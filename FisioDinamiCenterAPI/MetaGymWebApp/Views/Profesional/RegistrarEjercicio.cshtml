@model EjercicioDTO

@{
    ViewData["Title"] = "Registrar nuevo ejercicio";
}
<div class="container text-white">
    <h2 class="mb-4">Registrar nuevo ejercicio</h2>

    <form asp-action="RegistrarEjercicio" method="post" enctype="multipart/form-data" class="bg-dark p-4 rounded shadow-sm">
        <div class="mb-3">
            <input asp-for="Nombre" class="form-control" placeholder="Nombre del ejercicio" />
        </div>
        <div class="mb-3">
            <input asp-for="Tipo" class="form-control" placeholder="Tipo de ejercicio (ej. fuerza, movilidad...)" />
        </div>
        <div class="mb-3">
            <input asp-for="GrupoMuscular" class="form-control" placeholder="Grupo muscular (ej. espalda, piernas...)" />
        </div>
        <div class="mb-3">
            <textarea asp-for="Instrucciones" class="form-control" rows="4" placeholder="Instrucciones o consejos para el cliente"></textarea>
        </div>

        <div class="mb-4">
            <label class="form-label">Archivos multimedia</label>
            <input type="file" name="archivos" multiple class="form-control" />
        </div>

        <hr class="my-4" />

        <h4 class="mb-3">¿Necesitás medir alguna información durante el ejercicio? <br class="d-md-none" />Agregá las mediciones necesarias:</h4>
        <p class="text-secondary small mb-3">
            Las mediciones no son las series/repeticiones, sino información adicional que querés registrar, como duración, técnica o pulsaciones.
        </p>
        <div id="contenedorMediciones" class="mb-4"></div>

        <div class="mb-3">
            <button type="button" class="btn btn-outline-light btn-sm" onclick="agregarMedicion()">➕ Agregar Medición</button>
        </div>

        <button type="submit" class="btn btn-success">Registrar ejercicio</button>
    </form>
</div>

@section Scripts {
    <script src="~/js/profesional/registroMediciones.js"></script>
}
