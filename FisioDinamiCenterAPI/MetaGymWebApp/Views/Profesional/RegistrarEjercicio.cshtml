@model EjercicioDTO

<div class="container">
    <form asp-action="RegistrarEjercicio" method="post" enctype="multipart/form-data">
        <div class="mb-2">
            <input asp-for="Nombre" class="form-control" placeholder="Nombre del ejercicio" />
        </div>
        <div class="mb-2">
            <input asp-for="Tipo" class="form-control" placeholder="Tipo" />
        </div>
        <div class="mb-2">
            <input asp-for="GrupoMuscular" class="form-control" placeholder="Grupo muscular" />
        </div>
        <div class="mb-2">
            <textarea asp-for="Instrucciones" class="form-control" placeholder="Instrucciones"></textarea>
        </div>

        <div class="mb-2">
            <label>Archivos multimedia (imágenes o videos)</label>
            <input type="file" name="archivos" multiple class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Registrar ejercicio</button>
    </form>
</div>