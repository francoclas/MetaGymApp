@using LogicaNegocio.Extra
@model EjercicioDTO
@{
    ViewData["Title"] = "Editar ejercicio";
}

<div class="container mt-4 text-white">
    <h2 class="mb-4">Editar ejercicio</h2>

    <form asp-action="EditarEjercicio" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-2">
            <label>Nombre</label>
            <input asp-for="Nombre" class="form-control" />
        </div>
        <div class="mb-2">
            <label>Tipo</label>
            <input asp-for="Tipo" class="form-control" />
        </div>
        <div class="mb-2">
            <label>Grupo muscular</label>
            <input asp-for="GrupoMuscular" class="form-control" />
        </div>
        <div class="mb-2">
            <label>Instrucciones</label>
            <textarea asp-for="Instrucciones" class="form-control"></textarea>
        </div>

        <div class="mb-2">
            <label>Agregar archivos multimedia</label>
            <input type="file" name="archivos" multiple class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a href="@Url.Action("GestionEjercicios", "Profesional")" class="btn btn-secondary">Volver</a>
    </form>

    @if (Model.Medias != null && Model.Medias.Any())
    {
        <hr />
        <h5 class="mt-4">Archivos actuales</h5>
        <div class="row">
            @foreach (var media in Model.Medias)
            {
                <div class="col-md-4 mb-3">
                    @if (media.Tipo == Enum_TipoMedia.Imagen)
                    {
                        <img src="@media.Url" class="img-fluid rounded border" />
                    }
                    else if (media.Tipo == Enum_TipoMedia.Video)
                    {
                        <video controls class="w-100 border rounded">
                            <source src="@media.Url" type="video/mp4" />
                        </video>
                    }
                </div>
            }
        </div>
    }
</div>