@model CrearPublicacionDTO

@{
    ViewData["Title"] = "Solicitar Publicación";
}

<h2 class="text-light mb-4">Solicitar nueva publicación</h2>

<form asp-action="SolicitarPublicacion" method="post" enctype="multipart/form-data" class="bg-dark text-light p-4 rounded shadow-sm">
    <div class="mb-3">
        <label asp-for="Titulo" class="form-label">Título</label>
        <input asp-for="Titulo" class="form-control" placeholder="Ej: Tips para mejorar tu postura" />
        <span asp-validation-for="Titulo" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Contá de qué se trata la publicación..."></textarea>
        <span asp-validation-for="Descripcion" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaProgramada" class="form-label">Fecha de publicación <span class="text-muted small">(opcional)</span></label>
        <input asp-for="FechaProgramada" type="datetime-local" class="form-control" />
    </div>

    <div class="form-check form-switch mb-3">
        <input asp-for="EsPrivada" class="form-check-input" type="checkbox" role="switch" />
        <label class="form-check-label" asp-for="EsPrivada">¿Publicación privada?</label>
    </div>

    <div class="mb-3">
        <label asp-for="ArchivosMedia" class="form-label">Subir imágenes o videos <span class="text-muted small">(opcional, múltiples)</span></label>
        <input asp-for="ArchivosMedia" type="file" class="form-control" multiple accept="image/*,video/*" onchange="previewArchivos()" />
        <div id="preview" class="mt-3 d-flex gap-3 flex-wrap"></div>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-upload me-1"></i> Enviar solicitud
    </button>
</form>
<script src="~/js/profesional/solicitarPublicacion.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}