@model RutinaRegistroDTO

@{
    ViewData["Title"] = "Editar Rutina";
}
<link rel="stylesheet" href="~/css/ejercicios.css" />
<div class="container">
<h2>Editar Rutina</h2>

<form asp-action="EditarRutina" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div>
        <label>Nombre de la rutina</label>
        <input type="text" name="NombreRutina" value="@Model.NombreRutina" required />
    </div>
    <div>
        <label>Tipo de rutina</label>
        <input type="text" name="Tipo" value="@Model.Tipo" required />
    </div>

    <hr />
    <h3>Buscar ejercicio</h3>
    <input type="text" id="buscadorEjercicios" placeholder="Buscar por nombre o tipo..." />

    <div style="display: flex; gap: 20px; padding-top:5px; flex-wrap: wrap;" id="ejerciciosDisponibles">
        @foreach (var ejercicio in Model.MisEjerciciosDisponibles)
        {
                var img = ejercicio.Media?.Url;
                <div class="card-ejercicio" data-nombre="@ejercicio.Nombre" data-tipo="@ejercicio.Tipo" data-id="@ejercicio.Id">
                    <img src="@img" alt="Imagen ejercicio" class="img-ejercicio" />
                    <strong>@ejercicio.Nombre</strong><br />
                    <button class="btn-primary" type="button" onclick="agregarEjercicio(@ejercicio.Id, '@ejercicio.Nombre')">Agregar</button>
                    <a class="btn btn-sm btn-outline-light mt-1" target="_blank" href="/Profesional/InformacionEjercicio/@ejercicio.Id">Ver</a>

                </div>
        }
    </div>

    <hr />
    <h3>Ejercicios actuales</h3>
    <ul id="listaEjerciciosSeleccionados">
        @foreach (var id in Model.IdsEjerciciosSeleccionados)
        {
            var ej = Model.MisEjerciciosDisponibles.FirstOrDefault(e => e.Id == id);
            if (ej != null)
            {
                <li data-id="@id">@ej.Nombre <button type="button" onclick="quitarEjercicio(@id)">X</button></li>
                <input type="hidden" name="IdsEjerciciosSeleccionados" value="@id" />
            }
        }
    </ul>
    <div id="contenedorEjerciciosInputs"></div>

    <hr />
    <h3>Buscar cliente</h3>
    <input type="text" id="buscadorClientes" placeholder="Buscar por nombre, usuario o CI..." />

    <table class="tabla-clientes">
        <thead>
            <tr><th>Nombre</th><th>Usuario</th><th>CI</th><th>Acción</th></tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model.ClientesDisponibles)
            {
                <tr data-id="@cliente.Id" data-nombre="@cliente.NombreCompleto" data-usuario="@cliente.NombreUsuario" data-ci="@cliente.Ci">
                    <td>@cliente.NombreCompleto</td>
                    <td>@cliente.NombreUsuario</td>
                    <td>@cliente.Ci</td>
                    <td><button type="button" class="btn-primary" onclick="agregarCliente(@cliente.Id, '@cliente.NombreCompleto')">Agregar</button></td>
                </tr>
            }
        </tbody>
    </table>

    <hr />
    <h3>Clientes actuales</h3>
    <ul id="listaClientesSeleccionados">
        @foreach (var id in Model.IdsClientesAsignados)
        {
            var cli = Model.ClientesDisponibles.FirstOrDefault(c => c.Id == id);
            if (cli != null)
            {
                <li data-id="@id">@cli.NombreCompleto <button type="button" onclick="quitarCliente(@id)">X</button></li>
                <input type="hidden" name="IdsClientesAsignados" value="@id" />
            }
        }
    </ul>
    <div id="contenedorClientesInputs"></div>

    <hr />
    <button type="submit" class="btn-primary">Guardar cambios</button>
</form>
</div>

@section Scripts {
    <script src="~/js/profesional/rutinasRegistro.js"></script>
}
