@model List<ClienteDTO>
@{
    ViewData["Title"] = "Buscar sesiones de Clientes";
}

<div class="container mt-4">
    <h2 class="text-white">Buscar Clientes</h2>

    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" id="buscadorInput" class="form-control" placeholder="Buscar..." />
        </div>
        <div class="col-md-4">
            <select id="filtroCampo" class="form-select">
                <option value="0">Nombre Completo</option>
                <option value="1">CI</option>
                <option value="2">Correo</option>
                <option value="3">Teléfono</option>
            </select>
        </div>
    </div>

    <table class="table table-dark table-bordered" id="tablaClientes">
        <thead>
            <tr>
                <th>Nombre Completo</th>
                <th>CI</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.NombreCompleto</td>
                    <td>@c.Ci</td>
                    <td>@c.Correo</td>
                    <td>@c.Telefono</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary"
                           asp-action="HistorialSesionesCliente"
                           asp-controller="Profesional"
                           asp-route-id="@c.Id"
                           target="_blank">Ver sesiones de entrenamiento</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/profesional/buscarClientesCita.js"></script>
}
