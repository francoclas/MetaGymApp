@model LoginDTO

<div class="login-wrapper d-flex flex-column align-items-center justify-content-center">
    <img src="@Url.Content("~/MediaWeb/Imagenes/metagymLogo.png")" alt="MetaGym Logo" class="login-logo mb-3" />
    <h2 class="text-center mb-4">Inicio de sesión</h2>

    <form asp-action="Login" method="post" class="login-card p-4">
        <div class="mb-3">
            <input asp-for="NombreUsuario" class="form-control" placeholder="Ingrese correo o usuario" />
        </div>
        <div class="mb-3">
            <input asp-for="Password" type="password" class="form-control" placeholder="Ingrese contraseña" />
        </div>

        <button type="submit" class="btn btn-login w-100">Continuar</button>

        <div class="text-center mt-3">
            <small>¿No tiene cuenta? <a href="@Url.Action("RegistrarUsuario", "Home")">Regístrese aquí</a></small>
        </div>

        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div class="text-danger mt-2 text-center">@error.ErrorMessage</div>
        }
    </form>
</div>