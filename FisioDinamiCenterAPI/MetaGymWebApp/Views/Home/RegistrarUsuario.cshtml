@model ClienteDTO

@{
    ViewData["Title"] = "Registrarme :)";
}
@Html.Partial("_MensajeTemporal")

<div class="login-wrapper d-flex flex-column align-items-center justify-content-center">
    <img src="@Url.Content("~/MediaWeb/Imagenes/metagymLogo.png")" alt="MetaGym Logo" class="login-logo mb-3" />
    <h2 class="text-center mb-4">Registro de usuario</h2>

    <form id="registroForm" asp-action="RegistrarUsuario" method="post" class="login-card p-4">
        <div class="mb-3">
            <input id="ci" asp-for="Ci" class="form-control" placeholder="Ingrese su CI" maxlength="9" />
            <small class="text-danger" id="error-ci"></small>
        </div>
        <div class="mb-3">
            <input id="usuario" asp-for="NombreUsuario" class="form-control" placeholder="Nombre de usuario" maxlength="16" />
            <small class="text-danger" id="error-usuario"></small>
        </div>
        <div class="mb-3">
            <input id="nombre" asp-for="NombreCompleto" class="form-control" placeholder="Nombre completo" maxlength="60" />
            <small class="text-danger" id="error-nombre"></small>
        </div>
        <div class="mb-3">
            <input id="correo" asp-for="Correo" class="form-control" placeholder="Correo electrónico" type="email" maxlength="60" />
            <small class="text-danger" id="error-correo"></small>
        </div>
        <div class="mb-3">
            <input id="telefono" asp-for="Telefono" class="form-control" placeholder="Teléfono" maxlength="9" />
            <small class="text-danger" id="error-telefono"></small>
        </div>
        <div class="mb-3">
            <input id="pass" asp-for="Password" class="form-control" placeholder="Contraseña" type="password" maxlength="24" />
            <small class="text-danger" id="error-pass"></small>
        </div>
        <div class="mb-3">
            <input id="confpass" asp-for="ConfPass" class="form-control" placeholder="Confirmar contraseña" type="password" maxlength="24" />
            <small class="text-danger" id="error-confpass"></small>
        </div>

        <button type="submit" class="btn btn-login w-100" id="btn-submit" disabled>Registrarse</button>

        <div class="text-center mt-3">
            <small>¿Ya tenés cuenta? <a href="@Url.Action("Login", "Home")">Iniciar sesión</a></small>
        </div>

        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div class="text-danger text-center mt-2">@error.ErrorMessage</div>
        }
    </form>
</div>

@section Scripts {
    <script src="~/js/registro.js"></script>
}
