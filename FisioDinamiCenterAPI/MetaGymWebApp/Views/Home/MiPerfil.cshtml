@model UsuarioGenericoDTO

@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container">
    <h2 class="text-white">Mi Perfil</h2>
    <div class="card shadow p-3 bg-dark text-light" style="max-width: 400px;">
        <div class="text-center">
            @if (Model.Perfil != null)
            {
                <img src="@Model.Perfil.Url" class="rounded-circle" style="width:150px;height:150px;" alt="Foto de perfil" />
            }
            else
            {
                <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center"
                     style="width:150px;height:150px;">
                    Sin foto
                </div>
                <div class="mt-2 text-warning small">
                    Aún no tenés una foto de perfil. Te recomendamos agregar una para personalizar tu cuenta.
                </div>
            }

            <h4 class="mt-3">@Model.Nombre</h4>
            <p class="text-muted">@Model.Usuario</p>

            <a asp-action="EditarPerfil" class="btn btn-primary mt-2">Editar Perfil</a>
        </div>
    </div>

    <div class="mt-5">
        <h3 class="text-white">Historial de notificaciones</h3>

        <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
            <div>
                <label class="me-2 text-white">Filtrar por tipo:</label>
                <select id="filtroTipo" class="form-select d-inline-block w-auto">
                    <option value="todos">Todos</option>
                    @foreach (var tipo in ViewBag.TiposNotificacion as List<string>)
                    {
                        <option value="@tipo">@tipo</option>
                    }
                </select>
            </div>

            <div>
                <label class="me-2 text-white">Ordenar:</label>
                <select id="ordenFecha" class="form-select d-inline-block w-auto">
                    <option value="desc">Más recientes</option>
                    <option value="asc">Más antiguas</option>
                </select>
            </div>
        </div>

        <div class="mb-3">
            <input type="text" id="buscadorTexto" class="form-control" placeholder="Buscar por palabra clave...">
        </div>

        <ul id="listaNotificaciones" class="list-group">
            @foreach (var n in Model.Notificaciones.OrderByDescending(n => n.Fecha))
            {
                <li class="list-group-item bg-dark text-light mb-3 noti-item"
                    data-tipo="@n.Tipo"
                    data-fecha="@n.Fecha.Ticks"
                    data-texto="@($"{n.Titulo} {n.Mensaje}".ToLower())">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">@n.Titulo</div>
                        <span>@n.Mensaje</span><br />
                        <small class="text-muted">@n.Fecha.ToString("g")</small>
                    </div>
                    @if (!n.Leido)
                    {
                        <span class="badge bg-danger">Nuevo</span>
                    }
                </li>
            }
        </ul>
    </div>
</div>

<script src="~/js/perfilUsuario.js"></script>
