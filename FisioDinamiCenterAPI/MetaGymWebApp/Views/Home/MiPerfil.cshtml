@model UsuarioGenericoDTO

@{
    ViewData["Title"] = "Mi Perfil";
}

<h2>Mi Perfil</h2>

<div class="card shadow p-3" style="max-width: 400px;">
    <div class="text-center">
        @if (Model.Perfil != null)
        {
            <img src="@Model.Perfil.Url" class="rounded-circle" style="width:150px;height:150px;" alt="Foto de perfil" />
        }
        else
        {
            <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center"
                 style="width:150px;height:150px;">
                Sin foto
            </div>
        }

        <h4 class="mt-3">@Model.Nombre</h4>
        <p class="text-muted">@Model.Usuario</p>

        <a asp-action="EditarPerfil" class="btn btn-primary mt-2">Editar Perfil</a>
    </div>
</div>
