@{
    ViewData["Title"] = "Inicio";
}

<!-- Seccion inicial -->
<div class="hero-banner text-white d-flex align-items-center justify-content-center text-center">
    <div>
        <h1 class="display-4 fw-bold">¡Superá tus límites en MetaGym!</h1>
        <p class="lead">Entrená con los mejores profesionales, rutinas personalizadas y motivación sin límites.</p>
        <a href="@Url.Action("RegistrarUsuario", "Home")" class="btn btn-success btn-lg mt-3">¡Hacete miembro hoy!</a>
    </div>
</div>

<!-- Planes -->
<div class="container my-5">
    <h2 class="text-center mb-4 text-light">Nuestros Planes</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Plan 1 -->
        <div class="col">
            <div class="card h-100 bg-dark text-light border-light shadow-sm">
                <div class="card-body text-center">
                    <h4 class="card-title">Acceso 3 veces por semana</h4>
                    <p class="card-text">
                        Entrená hasta 3 veces por semana con rutina incluida y acompañamiento de nuestro equipo.
                    </p>
                    <h5 class="text-success fw-bold mt-3">$990 / mes</h5>
                </div>
            </div>
        </div>

        <!-- Plan 2 -->
        <div class="col">
            <div class="card h-100 bg-dark text-light border-light shadow-sm">
                <div class="card-body text-center">
                    <h4 class="card-title">Pase libre 1 mes</h4>
                    <p class="card-text">
                        Accedé todos los días con rutina personalizada y guía profesional constante.
                    </p>
                    <h5 class="text-primary fw-bold mt-3">$1.290 / mes</h5>
                </div>
            </div>
        </div>

        <!-- Plan 3 (Destacado) -->
        <div class="col">
            <div class="card h-100 bg-dark text-light border-warning shadow-lg">
                <div class="card-body text-center">
                    <h4 class="card-title">Pase libre 3 meses</h4>
                    <p class="card-text">
                        La mejor opción para comprometerte con vos mismo. Acceso ilimitado, rutina personalizada y seguimiento.
                    </p>
                    <h5 class="text-warning fw-bold mt-3">$3.000 / 3 meses</h5>
                    <span class="badge bg-warning text-dark mt-3">Plan recomendado</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Imagenes -->
<div class="container my-5">
    <h2 class="text-center mb-4">Nuestras instalaciones</h2>
    <div id="slideshowGym" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Url.Content("~/MediaWeb/Imagenes/gym1.jpg")" class="d-block w-100 rounded" />
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/MediaWeb/Imagenes/gym2.jpg")" class="d-block w-100 rounded" />
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/MediaWeb/Imagenes/gym3.jpg")" class="d-block w-100 rounded" />
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/MediaWeb/Imagenes/gym4.jpg")" class="d-block w-100 rounded" />
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/MediaWeb/Imagenes/gym5.jpg")" class="d-block w-100 rounded" />
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/MediaWeb/Imagenes/gym6.jpg")" class="d-block w-100 rounded" />
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#slideshowGym" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#slideshowGym" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>

<!-- Mapa de ubicacion -->
<div class="container my-5">
    <h2 class="text-center mb-4">¿Dónde estamos?</h2>
    <div class="ratio ratio-16x9">
        <iframe class= "rounded"src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3272.0791566378657!2d-56.1848743!3d-34.904463!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x959f81005a74b34b%3A0x7e1f91bdadd4f2ca!2sMetaGym!5e0!3m2!1ses!2suy!4v1750360108083!5m2!1ses!2suy"
            width="600" 
            height="450" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade">
        </iframe>
    </div>
</div>

<!-- Boton para registro -->
<div class="text-center my-5">
    <a href="@Url.Action("RegistrarUsuario", "Home")" class="btn btn-lg btn-success">
        ¡Sumate ahora a MetaGym!
    </a>
</div>