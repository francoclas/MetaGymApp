@model CrearPublicacionDTO

@{
    ViewData["Title"] = "Crear Publicación";
}

<h2 class="text-light mb-4">Crear nueva publicación</h2>

<form asp-action="CrearPublicacion" method="post" enctype="multipart/form-data" class="bg-dark text-light p-4 rounded shadow-sm">
    <div class="mb-3">
        <label asp-for="Titulo" class="form-label">Título</label>
        <input asp-for="Titulo" class="form-control" placeholder="Ej: Nuevo establecimiento de Meta" />
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Detalles, beneficios, tips..."></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="FechaProgramada" class="form-label">Fecha programada <span class="text-muted small">(opcional)</span></label>
        <input asp-for="FechaProgramada" type="datetime-local" class="form-control" />
    </div>

    <div class="form-check form-switch mb-3">
        <input asp-for="EsPrivada" class="form-check-input" type="checkbox" />
        <label class="form-check-label" asp-for="EsPrivada">¿Publicación privada?</label>
    </div>

    <div class="form-check form-switch mb-3">
        <input asp-for="MostrarEnNoticiasPublicas" class="form-check-input" type="checkbox" />
        <label class="form-check-label" asp-for="MostrarEnNoticiasPublicas">Mostrar en portal de novedades?</label>
    </div>

    <div class="mb-3">
        <label asp-for="ArchivosMedia" class="form-label">Subir imágenes o videos <span class="text-muted small">(múltiples)</span></label>
        <input asp-for="ArchivosMedia" type="file" class="form-control" multiple accept="image/*,video/*" onchange="previewMedia()" />
        <div id="preview" class="mt-3 d-flex gap-3 flex-wrap"></div>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="bi bi-check-circle me-1"></i> Crear publicación
    </button>
</form>
<script src="~/js/admin/crearPublicacion.js"></script>