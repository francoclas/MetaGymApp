@model EstablecimientoDTO
@{
    ViewData["Title"] = "Editar Establecimiento";
}

<div class="card py-2 container">
    <h2>Editar establecimiento</h2>

    <form asp-action="EditarEstablecimiento" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label>Nombre</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Dirección</label>
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>

        @if (!string.IsNullOrEmpty(Model.UrlMedia))
        {
            <div class="form-group mt-2">
                <label>Imagen actual</label><br />
                <img src="@Model.UrlMedia" alt="Imagen actual" style="max-width: 300px;" />
            </div>
        }

        <div class="form-group mt-2">
            <label>Reemplazar imagen</label>
            <input type="file" name="archivo" class="form-control" />
        </div>

        <button type="submit" class="btn btn-warning mt-3">Guardar cambios</button>
    </form>
</div>
