@model EspecialidadDTO
@{
    ViewData["Title"] = "Registrar Especialidad";
}

<h2 class="text-light mb-4">Registrar nueva especialidad</h2>

<form asp-action="RegistrarEspecialidad" method="post" class="bg-dark text-light p-4 rounded shadow-sm">
    <div class="mb-3">
        <label class="form-label">Nombre de la especialidad</label>
        <input asp-for="NombreEspecialidad" class="form-control" placeholder="Ej: Kinesiología deportiva" />
        <span asp-validation-for="NombreEspecialidad" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <textarea asp-for="DescripcionEspecialidad" class="form-control" rows="4" placeholder="Breve descripción de la especialidad..."></textarea>
        <span asp-validation-for="DescripcionEspecialidad" class="text-danger small"></span>
    </div>

    <button type="submit" class="btn btn-success">Registrar</button>
</form>