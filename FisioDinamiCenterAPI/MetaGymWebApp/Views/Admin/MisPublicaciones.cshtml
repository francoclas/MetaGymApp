@model MisPublicacionesAdminModelo
@{
    ViewData["Title"] = "Mis Publicaciones";
}
<link rel="stylesheet" href="~/css/admin/misPublicacionesAdmin.css" />

<h2 class="text-white">Mis Publicaciones</h2>
<div>
    <a href="/Admin/CrearPublicacion" class="btn btn btn-outline-success mb-3">Nueva publicación</a>
</div>

<ul class="nav nav-tabs mt-4" id="tabsPublicaciones">
    <li class="nav-item">
        <a class="nav-link active" data-tab="creadas">Creadas</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-tab="aprobadas">Aprobadas</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-tab="rechazadas">Rechazadas</a>
    </li>
</ul>

<div class="tab-section mt-4">
    <div id="creadas" class="tab-content">
        @if (Model.PublicacionesCreadas.Any())
        {
            <table class="table table-dark table-bordered datatable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Fecha creación</th>
                        <th>Autor</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pub in Model.PublicacionesCreadas)
                    {
                        <tr>
                            <td>@pub.Id</td>
                            <td>@pub.Titulo</td>
                            <td>@pub.FechaCreacion.ToString("g")</td>
                            <td>@pub.NombreAutor</td>
                            <td>
                                <a href="@Url.Action("DetallesPublicacion", "Admin", new { id = pub.Id })"
                                   class="btn btn-outline-light btn-sm">Ver</a>
                                <a href="@Url.Action("EditarPublicacion", "Admin", new { id = pub.Id })"
                                   class="btn btn-outline-warning btn-sm">Editar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No hay publicaciones creadas.</p>
        }
    </div>

    <div id="aprobadas" class="tab-content d-none">
        @if (Model.PublicacionesAutorizadas.Any())
        {
            <table class="table table-dark table-bordered datatable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Fecha creación</th>
                        <th>Autor</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pub in Model.PublicacionesAutorizadas)
                    {
                        <tr>
                            <td>@pub.Id</td>
                            <td>@pub.Titulo</td>
                            <td>@pub.FechaCreacion.ToString("g")</td>
                            <td>@pub.NombreAutor</td>
                            <td>
                                <a href="@Url.Action("DetallesPublicacion", "Admin", new { id = pub.Id })"
                                   class="btn btn-outline-light btn-sm">Ver</a>
                                <a href="@Url.Action("EditarPublicacion", "Admin", new { id = pub.Id })"
                                   class="btn btn-outline-warning btn-sm">Editar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No hay publicaciones aprobadas.</p>
        }
    </div>

    <div id="rechazadas" class="tab-content d-none">
        @if (Model.PublicacionesRechazadas.Any())
        {
            <table class="table table-dark table-bordered datatable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Fecha creación</th>
                        <th>Autor</th>
                        <th>Motivo rechazo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pub in Model.PublicacionesRechazadas)
                    {
                        <tr>
                            <td>@pub.Id</td>
                            <td class="text-danger">@pub.Titulo</td>
                            <td>@pub.FechaCreacion.ToString("g")</td>
                            <td>@pub.NombreAutor</td>
                            <td class="text-warning">@pub.MotivoRechazo</td>
                            <td>
                                <a href="@Url.Action("DetallesPublicacion", "Admin", new { id = pub.Id })"
                                   class="btn btn-outline-light btn-sm">Ver</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No hay publicaciones rechazadas.</p>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/admin/misPublicacionesAdmin.js"></script>
}
