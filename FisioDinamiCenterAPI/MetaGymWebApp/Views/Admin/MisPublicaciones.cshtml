@model MisPublicacionesAdminModelo
@{
    ViewData["Title"] = "Mis Publicaciones";
}
<link rel="stylesheet" href="~/css/misPublicacionesAdmin.css" />

<h2 class="text-white">Mis Publicaciones</h2>

<ul class="nav nav-tabs mt-4" id="tabsPublicaciones">
    <li class="nav-item">
        <a class="nav-link active" data-tab="creadas">Creadas</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-tab="aprobadas">Aprobadas</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-tab="rechazadas">Rechazadas</a>
    </li>
</ul>

<div class="tab-section mt-4">
    <div id="creadas" class="tab-content">
        @if (Model.PublicacionesCreadas.Any())
        {
            <div class="d-flex flex-wrap gap-3">
                @foreach (var pub in Model.PublicacionesCreadas)
                {
                    <div class="card card-publicacion">
                        <div class="card-body">
                            <h5 class="card-title">@pub.Titulo</h5>
                            <p class="card-text">@pub.Descripcion</p>
                            <a href="@Url.Action("DetallesPublicacion", "Admin", new { id = pub.Id })" class="btn btn-outline-light btn-sm">Ver detalles</a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">No hay publicaciones creadas.</p>
        }
    </div>

    <div id="aprobadas" class="tab-content d-none">
        @if (Model.PublicacionesAutorizadas.Any())
        {
            <div class="d-flex flex-wrap gap-3">
                @foreach (var pub in Model.PublicacionesAutorizadas)
                {
                    <div class="card card-publicacion">
                        <div class="card-body">
                            <h5 class="card-title">@pub.Titulo</h5>
                            <p class="card-text">@pub.Descripcion</p>
                            <a href="@Url.Action("DetallesPublicacion", "Admin", new { id = pub.Id })" class="btn btn-outline-light btn-sm">Ver detalles</a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">No hay publicaciones aprobadas.</p>
        }
    </div>

    <div id="rechazadas" class="tab-content d-none">
        @if (Model.PublicacionesRechazadas.Any())
        {
            <div class="d-flex flex-wrap gap-3">
                @foreach (var pub in Model.PublicacionesRechazadas)
                {
                    <div class="card card-publicacion border-danger">
                        <div class="card-body">
                            <h5 class="card-title text-danger">@pub.Titulo</h5>
                            <p class="card-text">@pub.Descripcion</p>
                            <hr />
                            <p><strong>Motivo del rechazo:</strong> <span class="text-warning">@pub.MotivoRechazo</span></p>
                            <a href="@Url.Action("DetallesPublicacion", "Admin", new { id = pub.Id })" class="btn btn-outline-light btn-sm">Ver detalles</a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">No hay publicaciones rechazadas.</p>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/misPublicacionesAdmin.js"></script>
}
