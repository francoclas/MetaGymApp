@model EspecialidadDTO
@{
    ViewData["Title"] = "Editar Especialidad - " + Model.NombreEspecialidad;
}

<div class="card py-2 container">
    <h2>Editar especialidad</h2>

    <form asp-action="EditarEspecialidad" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label>Nombre</label>
            <input asp-for="NombreEspecialidad" class="form-control" />
            <span asp-validation-for="NombreEspecialidad" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Descripción</label>
            <textarea asp-for="DescripcionEspecialidad" class="form-control"></textarea>
            <span asp-validation-for="DescripcionEspecialidad" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning mt-3">Guardar cambios</button>
    </form>
</div>
