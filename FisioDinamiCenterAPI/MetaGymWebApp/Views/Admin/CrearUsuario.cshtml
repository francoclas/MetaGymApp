@model CrearUsuarioDTO
@{
    ViewData["Title"] = "Crear nuevo usuario";
}

<div class="container mt-4 text-white">
    <h2>Crear nuevo usuario</h2>
    <hr />

    <form asp-action="CrearUsuario" method="post" class="bg-dark p-4 rounded border border-secondary">
        <div class="mb-2">
            <input asp-for="Ci" class="form-control" placeholder="CI" minlength="6" maxlength="8" title="La cédula debe tener entre 6 y 8 dígitos numéricos" />
        </div>
        <div class="mb-2">
            <input asp-for="Usuario" class="form-control" placeholder="Usuario" minlength="4" maxlength="20" title="Debe tener entre 4 y 20 caracteres" />
        </div>
        <div class="mb-2">
            <input asp-for="NombreCompleto" class="form-control" placeholder="Nombre completo" minlength="3" maxlength="50" title="Debe tener entre 3 y 50 caracteres" />
        </div>
        <div class="mb-2">
            <input asp-for="Correo" class="form-control" placeholder="Correo" type="email"required title="Ingrese un correo válido" />
        </div>
        <div class="mb-2">
            <input asp-for="Password" class="form-control" placeholder="Contraseña" type="password" required minlength="6" maxlength="30" title="Debe tener entre 6 y 30 caracteres" />
        </div>
        <div class="mb-2">
            <input asp-for="Telefono" class="form-control" placeholder="Teléfono" minlength="8" maxlength="12"title="Debe tener entre 8 y 12 dígitos" />
        </div>

        <label class="form-label mt-3">Seleccionar rol</label>
        <div class="form-check form-switch">
            <input class="form-check-input" type="radio" name="Rol" value="Admin" id="rolAdmin" @(Model.Rol == "Admin" ? "checked" : "")>
            <label class="form-check-label" for="rolAdmin">Administrador</label>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="radio" name="Rol" value="Profesional" id="rolProfesional" @(Model.Rol == "Profesional" ? "checked" : "")>
            <label class="form-check-label" for="rolProfesional">Profesional</label>
        </div>
        <div class="form-check form-switch mb-3">
            <input class="form-check-input" type="radio" name="Rol" value="Cliente" id="rolCliente" @(Model.Rol == "Cliente" ? "checked" : "")>
            <label class="form-check-label" for="rolCliente">Cliente</label>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Crear usuario</button>
    </form>
</div>