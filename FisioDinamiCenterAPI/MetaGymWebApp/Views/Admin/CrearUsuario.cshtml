@model CrearUsuarioDTO
@{
    ViewData["Title"] = "Crear nuevo usuario";
}

<div class="container mt-4 text-white">
    <h2>Crear nuevo usuario</h2>
    <hr />

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-@TempData["TipoMensaje"]">@TempData["Mensaje"]</div>
    }

    <form asp-action="CrearUsuario" method="post" class="bg-dark p-4 rounded border border-secondary">
        <div class="mb-2">
            <input asp-for="Ci" class="form-control" placeholder="CI" />
        </div>
        <div class="mb-2">
            <input asp-for="Usuario" class="form-control" placeholder="Usuario" />
        </div>
        <div class="mb-2">
            <input asp-for="NombreCompleto" class="form-control" placeholder="Nombre completo" />
        </div>
        <div class="mb-2">
            <input asp-for="Correo" class="form-control" placeholder="Correo" type="email" />
        </div>
        <div class="mb-2">
            <input asp-for="Password" class="form-control" placeholder="Contraseña" type="password" />
        </div>
        <div class="mb-2">
            <input asp-for="Telefono" class="form-control" placeholder="Teléfono" />
        </div>
        <div class="mb-3">
            <select asp-for="Rol" class="form-select">
                <option disabled selected>Seleccione rol</option>
                <option value="Admin">Admin</option>
                <option value="Profesional">Profesional</option>
                <option value="Cliente">Cliente</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Crear usuario</button>
    </form>
</div>