@model ControlPublicacionesModelo

@{
    ViewData["Title"] = "Control de Publicaciones";
}

<link rel="stylesheet" href="~/css/admin/controlPublicaciones.css" />

<div class="container">
    <h2 class="text-white mb-3">Solicitudes de Publicaciones</h2>
    <div class="d-flex justify-content-between mb-3">
        <a href="/Admin/MisPublicaciones" class="btn btn-outline-light">Ver Mis Publicaciones</a>
        <a href="/Admin/CrearPublicacion" class="btn btn-outline-success">Nueva publicación</a>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <label class="text-white">Desde</label>
            <input type="date" id="fechaDesde" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="text-white">Hasta</label>
            <input type="date" id="fechaHasta" class="form-control" />
        </div>
    </div>

    @if (Model.PublicacionesPendientes.Any())
    {
        <table id="tablaPublicaciones" class="table table-dark table-bordered datatable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Solicitante</th>
                    <th>Fecha de solicitud</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pub in Model.PublicacionesPendientes)
                {
                    <tr>
                        <td>@pub.Id</td>
                        <td>@pub.Titulo</td>
                        <td>@pub.NombreAutor</td>
                        <td>@pub.FechaCreacion.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a href="/Admin/RevisionPublicacion?id=@pub.Id" class="btn btn-danger btn-sm">Ver solicitud</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No hay solicitudes de publicaciones pendientes.</p>
    }
</div>

@section Scripts {
    <script src="~/js/admin/controlPublicaciones.js"></script>
}
