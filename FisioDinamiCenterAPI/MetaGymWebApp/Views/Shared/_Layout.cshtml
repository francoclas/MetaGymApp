@inject IHttpContextAccessor HttpContextAccessor

@{
    var sesion = GestionSesion.ObtenerSesion(HttpContextAccessor.HttpContext);
    var estaLogueado = sesion != null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Metagym</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="bg-light p-2 border-bottom">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                    <img src="~/MediaWeb/Imagenes/logo.png" alt="Logo" style="height: 50px; margin-right: 10px;" />
                    MetaGym
                </a>
            </div>

            <nav>
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Informacion", "Home")">Información</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://www.instagram.com/metagym.uy/" target="_blank">Instagram</a>
                    </li>

                    @if (!estaLogueado)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Home")">Iniciar Sesión</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("RegistrarUsuario", "Cliente")">¡Hacerse miembro!</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="nav-link">Hola, @sesion.Nombre</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "Home")">Cerrar sesión</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </header>

    <main class="container mt-4">
        <div class="row">
            @if (estaLogueado)
            {
                <div class="col-3">
                    @Html.Partial("_MenuLateral", sesion)
                </div>
                <div class="col-9">
                    @RenderBody()
                </div>
            }
            else
            {
                <div class="col-12">
                    @RenderBody()
                </div>
            }
        </div>
    </main>

    @RenderSection("Scripts", required: false)
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
