@using LogicaApp.DTOS
@model CitaDTO
@{
    ViewData["Title"] = "Informacion de la cita";
}

<div class="container mt-4 text-white">
    <h2 class="mb-3">Detalles de la Cita</h2>

    <div class="card bg-dark border-light mb-3">
        <div class="card-body">
            <p><strong>ID de la cita:</strong> @Model.CitaId</p>
            <p><strong>Estado:</strong> @Model.Estado</p>
            <p><strong>Especialidad:</strong> @Model.Especialidad?.NombreEspecialidad</p>
            <p><strong>Establecimiento:</strong> @Model.Establecimiento?.Nombre</p>
            <p><strong>Dirección:</strong> @Model.Establecimiento?.Direccion</p>
            <p><strong>Fecha de asistencia:</strong> @Model.FechaAsistencia.ToString("dd/MM/yyyy HH:mm")</p>
            <p><strong>Fecha de solicitud:</strong> @Model.FechaCreacion?.ToString("dd/MM/yyyy HH:mm")</p>
            <p><strong>Descripción:</strong> @Model.Descripcion</p>

            @if (Model.ProfesionalId != null)
            {
                <p><strong>Profesional asignado (ID):</strong> @Model.ProfesionalId</p>
            }

            @if (!string.IsNullOrWhiteSpace(Model.Conclusion))
            {
                <hr />
                <h5 class="mt-3">Conclusión de la cita</h5>
                <p>@Model.Conclusion</p>
            }
        </div>
    </div>

    <a href="@Url.Action("MisCitas", "Cliente")" class="btn btn-secondary">Volver a mis citas</a>
</div>