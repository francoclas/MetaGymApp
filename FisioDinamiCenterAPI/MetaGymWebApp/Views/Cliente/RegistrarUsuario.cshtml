@model ClienteDTO

<h2>Registro de Cliente</h2>

<form asp-action="RegistrarUsuario" method="post">
    <div>
        <label>CI:</label>
        <input asp-for="Ci" class="form-control" />
    </div>
    <div>
        <label>Nombre de usuario:</label>
        <input asp-for="NombreUsuario" class="form-control" />
    </div>
    <div>
        <label>Nombre completo:</label>
        <input asp-for="NombreCompleto" class="form-control" />
    </div>
    <div>
        <label>Correo:</label>
        <input asp-for="Correo" type="email" class="form-control" />
    </div>
    <div>
        <label>Teléfono:</label>
        <input asp-for="Telefono" class="form-control" />
    </div>
    <div>
        <label>Contraseña:</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <div>
        <label>Confirmar Contraseña:</label>
        <input asp-for="ConfPass" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Registrarse</button>
</form>

@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="text-danger">@error.ErrorMessage</div>
}