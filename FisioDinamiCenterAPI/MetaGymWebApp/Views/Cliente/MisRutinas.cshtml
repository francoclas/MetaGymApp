@using LogicaNegocio.Clases
@model List<RutinaAsignada>

@{
    ViewData["Title"] = "Mis Rutinas";
}
<div class="container mt-4 text-white">

    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h2 class="mb-0">Mis Rutinas Asignadas</h2>
        <a href="@Url.Action("HistoricoSesionesEntrenamiento", "Cliente")" class="btn btn-outline-danger">
            Ver historial de entrenamientos
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center bg-dark p-4 rounded shadow-sm">
            <h4 class="text-warning">Todavía no tenés rutinas asignadas</h4>
            <p class="mt-3">Consultá con un profesional de MetaGym para empezar tu entrenamiento personalizado.</p>
            <p class="text-muted small">Podés acercarte al gimnasio o escribirnos por redes para recibir asistencia.</p>
            <a href="https://www.instagram.com/metagym.uy/" class="btn btn-outline-light mt-2" target="_blank">
                Contactar con MetaGym
            </a>
        </div>
    }
    else
    {
        <div class="lista-rutinas">
            @foreach (var rutina in Model)
            {
                <div class="card mb-3 p-3 border border-light bg-dark text-white shadow-sm">
                    <h4>@rutina.Rutina.NombreRutina</h4>
                    <p><strong>Tipo:</strong> @rutina.Rutina.Tipo</p>
                    <p><strong>Asignada el:</strong> @rutina.FechaAsignacion.ToShortDateString()</p>
                    <a class="btn btn-primary" asp-action="DetallesRutinaAsignada" asp-route-id="@rutina.Id">Ver rutina</a>
                </div>
            }
        </div>
    }
</div>
